{% extends 'base.html.twig' %}

{% block body %}
    <h1>Plats</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plat.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ plat.nom }}</td>
            </tr>
            <tr>
                <th>Recette</th>
                <td>{{ plat.recette }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ plat.photo }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('plats_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('plats_edit', { 'id': plat.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
